<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentif">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/authen">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Member Login"
                android:textColor="@color/colorPrimaryDark"
                android:textColorLink="#00020202"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="362dp"
                android:layout_height="133dp"
                app:srcCompat="@drawable/ic_bgk" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_login"
                    android:ems="10"
                    android:hint="User name"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorAccent">

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mdp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent" />

                <Button
                    android:id="@+id/sing"
                    android:layout_width="fill_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/bt1"
                    android:text="Sign in"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/ref"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/bt1"
                    android:text="Refresh"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/regi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="     Register Me"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>